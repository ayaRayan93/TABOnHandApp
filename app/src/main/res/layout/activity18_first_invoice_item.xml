<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    card_view:cardCornerRadius="0dp"

    android:layout_margin="5dp">
    <LinearLayout
        android:background="@drawable/selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp"
        android:id="@+id/item"
        >

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/customColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <RelativeLayout

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="3dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/invNo"
                    android:text="Invoice No : "
                    android:textColor="@color/customColor"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/invNo"
                    android:id="@+id/invoice_no_value"
                    android:textSize="18sp"
                    android:text="0.00"
                    android:textColor="@color/textColor2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/deleteItem"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:src="@drawable/trash"
                    android:textColor="@color/textColor2"
                    />
            </RelativeLayout>
            <LinearLayout

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="3dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer : "
                    android:textColor="@color/customColor"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cust_name_value"
                    android:textSize="18sp"
                    android:text="0.00"
                    android:textColor="@color/textColor2"
                    />

            </LinearLayout>
            <LinearLayout

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:weightSum="8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:textColor="@color/customColor"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_value"
                    android:textSize="18sp"
                    android:text="0.00"
                    android:textColor="@color/textColor2"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/netText"
                    android:text="Net : "
                    android:textColor="@color/customColor"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/net_value"
                    android:layout_toRightOf="@id/netText"
                    android:textSize="18sp"
                    android:text="0.00"
                    android:textColor="@color/textColor2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/editItem"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:src="@drawable/editbutton"
                    android:textColor="@color/textColor2"
                    />



            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
