<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadeya.tabonhandapp.activities.transaction.invoices.AddItemsInvoice"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/add"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/update"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add Item to Invoice"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice No:"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/invoiceNo1"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice Type:"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/invoiceType1"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name:"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerName1"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor1"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/customColor"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/mainColor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Name :"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemName1"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Code :"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemCode1"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unit :"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/unit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:layout_weight="10"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Quantity"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/edittextstyl"
                        android:weightSum="10"
                        >
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="#fff"
                            android:textColor="@color/textColor1"
                            android:inputType="numberDecimal"
                            android:text="1"
                            android:id="@+id/qty"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/barcode2"
                            android:layout_margin="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Price"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/edittextstyl"
                        android:weightSum="10"
                        >
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="#fff"
                            android:textColor="@color/textColor1"
                            android:inputType="numberDecimal"
                            android:text="0"
                            android:id="@+id/price1"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/barcode2"
                            android:layout_margin="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Value"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:id="@+id/valueBeforDis"
                        android:text="0"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="DisType "
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/edittextstyl"
                    android:weightSum="10"
                    >
                <Spinner android:id="@+id/discountType"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:textColor="@color/customColor"

                    >
                </Spinner>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/arrow"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                  <TextView
                      android:layout_width="85dp"
                      android:layout_height="match_parent"
                      android:text="Dis Value"
                      android:textSize="20sp"
                      android:layout_margin="10dp"
                      />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/edittextstyl"
                        android:weightSum="10"
                        >
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:textColor="@color/textColor1"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:id="@+id/discountValue"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/barcode2"
                        android:layout_margin="10dp"
                        />
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Discount"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:id="@id/discount"
                        android:text="0"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Value after discount"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/valueAfterDiscount"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Tax"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/edittextstyl"
                        android:weightSum="10"
                        >
                    <EditText
                        android:background="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="@color/textColor1"
                        android:text="0"
                        android:inputType="numberDecimal"
                        android:layout_margin="10dp"
                        android:id="@+id/tax"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:text="%"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textColor1"
                            android:inputType="numberDecimal"
                            />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/receipt"
                        android:layout_margin="10dp"
                        />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Tax Value"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/taxValue"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Net:"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor1"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/net"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="Date"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/edittextstyl"
                        android:weightSum="10"
                        >
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:textColor="@color/textColor1"
                        android:hint="Date"
                        android:id="@+id/itemInvoicDate"
                        />
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/date"
                        android:layout_margin="10dp"
                        android:id="@+id/itemInvoicButtoneDate"
                        />
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:text="Add New Item"
                        android:id="@+id/addAddNew"
                        android:textColor="#fff"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:text="Add and Close"
                        android:id="@+id/addAndclose"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
